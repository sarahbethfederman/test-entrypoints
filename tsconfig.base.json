{
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2018"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@lendi-ui/*": ["./packages/*/src"],
      "@lendi-ui/*-utils": ["./utils/*-utils/src"]
    }
  },
  "exclude": ["node_modules"]
}
