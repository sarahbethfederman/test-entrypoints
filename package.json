{
  "name": "lendi-ui",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "utils/*",
    "website"
  ],
  "dependencies": {
    "@lui/story-utils": "^1.0.0",
    "@storybook/addon-actions": "^4.0.0-alpha.14",
    "@storybook/addon-info": "^4.0.0-alpha.14",
    "@storybook/addon-knobs": "^4.0.0-alpha.14",
    "@storybook/addons": "^4.0.0-alpha.14",
    "@storybook/react": "^4.0.0-alpha.3",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.1.0",
    "@types/react": "^16.4.0",
    "@types/react-dom": "^16.0.6",
    "@types/storybook__addon-info": "^3.2.3",
    "@types/storybook__addon-knobs": "^3.3.1",
    "@types/storybook__react": "^3.0.7",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-styled-components": "^5.0.1",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "netlify": "^1.2.0",
    "prettier": "^1.13.5",
    "prettier-check": "^2.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.0",
    "storybook-addon-jsx": "^5.3.0",
    "styled-components": "^3.3.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.0-dev.20180724"
  },
  "scripts": {
    "list": "lerna ls",
    "clean:node_modules": "lerna clean && rm -rf node_modules",
    "clean:assets": "lerna exec 'rm -rf dist'",
    "lint:sources": "tslint -c ./tslint.sources.json --format stylish --exclude '**/*.+(story|test).+(ts|tsx)' '+(packages|utils|website)/*/src/*.+(ts|tsx)'",
    "lint:stories-and-tests": "tslint -c ./tslint.stories-and-tests.json --format stylish '+(packages|utils|website)/*/src/*.+(story|test).+(ts|tsx)'",
    "lint": "yarn run lint:sources && yarn run lint:stories-and-tests",
    "build": "lerna run build",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch",
    "start": "cd website && yarn start",
    "deploy": "lerna run deploy",
    "precommit": "yarn run lint && yarn run test && yarn run build && yarn run lint-staged",
    "create-component": "create-lui-component"
  },
  "lint-staged": {
    "**/*.{json,js,jsx,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
