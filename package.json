{
  "name": "lendi-ui",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "utils/*",
    "website"
  ],
  "dependencies": {
    "@babel/core": "^7.11.1",
    "@babel/eslint-parser": "^7.11.4",
    "@babel/eslint-plugin": "^7.11.3",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@changesets/cli": "^2.10.2",
    "@lendi/lendi-analytics-package": "^1.0.1",
    "@lendi/lsd": "^3.4.0",
    "@lendi/prettier-config": "^1.0.0",
    "@lendi/typescript-config": "^2.0.0",
    "@manypkg/cli": "^0.14.0",
    "@preconstruct/cli": "^1.1.27",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.8",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.1.0",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.6",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "babel-jest": "^26.3.0",
    "babel-plugin-styled-components": "^1.11.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "eslint-plugin-standard": "^4.0.1",
    "fast-glob": "^2.2.6",
    "jest": "^26.4.0",
    "jest-styled-components": "^6.0.1",
    "lint-staged": "^7.2.0",
    "minimatch": "^3.0.4",
    "netlify": "^1.2.0",
    "prettier": "^2.0.5",
    "prettier-check": "^2.0.0",
    "publish-if-not-published": "^1.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.13.1",
    "styled-components": "^4",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^3.9.7",
    "yarn": "^1.13.0",
    "yarn-deduplicate": "^1.1.0"
  },
  "scripts": {
    "build": "preconstruct build",
    "build:website": "yarn workspace @lendi-ui/website run build",
    "build:assets": "yarn build:icons && yarn build:fancy-icons && yarn build:lender-logos",
    "build:icons": "node packages/icon/build/index.js",
    "build:fancy-icons": "node packages/fancy-icon/build/index.js",
    "build:lender-logos": "node packages/lender-logos/build/index.js",
    "check": "yarn run check:dependencies && yarn run check:changesets",
    "check:dependencies": "yarn manypkg check",
    "check:changesets": "yarn changeset status",
    "check:duplicates": "yarn-deduplicate --list --fail",
    "check:types": "tsc --noEmit",
    "lint": "yarn run lint:css && yarn run lint:format",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx ./packages ./utils",
    "lint:js:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ./packages ./utils",
    "lint:css": "stylelint './packages/**/*.{js,jsx,ts,tsx}'",
    "lint:format": "prettier-check '**/*.{js,jsx,ts,tsx,md}'",
    "clean": "yarn run clean:workspaces && yarn run clean:node",
    "clean:node": "rm -rf node_modules",
    "clean:workspaces": "rm -rf dist",
    "create-component": "yo @lendi/create-lui-component && rm packages/.yo-rc.json",
    "format:fix": "prettier --write '**/*.{json,js,jsx,ts,tsx,md}' --loglevel silent",
    "prebuild": "yarn build:assets",
    "precommit": "yarn run format:fix && yarn run test -o",
    "prepush": "yarn run remove:duplicates && yarn run check",
    "postinstall": "preconstruct dev",
    "remove:duplicates": "yarn-deduplicate",
    "start": "yarn workspace @lendi-ui/website run start",
    "test": "preconstruct dev && jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch"
  },
  "preconstruct": {
    "packages": [
      "packages/!(navbar)",
      "utils/*"
    ]
  }
}
