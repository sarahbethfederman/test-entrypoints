{
  "name": "lendi-ui",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "utils/*",
    "website"
  ],
  "dependencies": {
    "@lendi-ui/doc-utils": "^1.0.0",
    "@lendi/editor-config": "^1.0.0",
    "@lendi/prettier-config": "^1.0.0",
    "@lendi/tslint-config": "^1.0.0",
    "@lendi/typescript-config": "^1.0.0",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^23.1.0",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.6",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-runtime": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-styled-components": "^6.0.1",
    "lerna": "^3.0.4",
    "lint-staged": "^7.2.0",
    "netlify": "^1.2.0",
    "prettier": "^1.13.5",
    "prettier-check": "^2.0.0",
    "publish-if-not-published": "^1.0.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.2",
    "ts-jest": "23.1.3",
    "tslint": "^5.10.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "list": "lerna ls",
    "clean:node": "lerna clean && rm -rf node_modules",
    "clean:workspaces": "lerna exec 'rm -rf dist'",
    "clean": "yarn run clean:workspaces && yarn run clean:node",
    "check:lint-source": "tslint -p tsconfig.types.json -c ./tslint.sources.json --format stylish --exclude '**/*.+(doc|example|test).+(ts|tsx)' '+(packages|utils)/*/src/*.+(ts|tsx)' '+website/src/**/*.+(ts|tsx)'",
    "check:lint-doc-and-test": "tslint -p tsconfig.types.json -c ./tslint.stories-and-tests.json --format stylish '+(packages|utils)/*/src/*.+(doc|example|test).+(ts|tsx)' '+website/src/**/*.+(doc|example|test).+(ts|tsx)'",
    "check:format": "prettier-check '**/*.{json,js,jsx,ts,tsx,md}'",
    "check": "yarn run check:lint-source && yarn run check:lint-doc-and-test && yarn run check:format",
    "check:danger": "danger local",
    "build": "yarn build:icons && lerna run build",
    "build:icons": "node packages/icon/build/index.js",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch",
    "start": "cd website && yarn start",
    "create-component": "npx create-lui-component",
    "precommit": "yarn run lint-staged && yarn run check && yarn run test && yarn run build",
    "test-react-15": "yarn run build:icons && jest --config=./react-15-jest.config.js"
  },
  "lint-staged": {
    "**/*.{json,js,jsx,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "danger": "^7.0.2",
    "fast-glob": "^2.2.6"
  }
}
